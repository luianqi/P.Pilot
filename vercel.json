{
    "builds": [{
        "src": "root/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.10" }
    },
    {
        "src": "static/**",
        "use": "@vercel/static",
        "config": {
            "distDir": "staticfiles"
            }
    }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "root/wsgi.py"
        }
    ]
}